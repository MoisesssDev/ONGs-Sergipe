    <%= f.text_field :query, class: 'form-control', placeholder: 'Buscar por ONGs' %>
    <button class="btn btn-outline-secondary" type="submit" name="buscar">
      <i class="bi bi-search"></i>
    </button>
  </div>
<% end %>